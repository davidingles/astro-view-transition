---
export interface Props{
    id: string,
    title: string,
    img: string,
 }
const { title, img, id } = Astro.props
---

<a href={`/${id}`} class="hover:contrast-105 inline-block transition-all hover:scale-125 hover:shadow-2xl">
    <img class="aspect-[389/500] h-full object-cover w-full max-w-full rounded-lg" src={img} alt={`Portada del libro ${title}`}>
</a>